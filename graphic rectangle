import turtle

#create a graphic window
wn = turtle.Screen()

#change current white background color to lightgreen
wn.bgcolor('lightGreen')

#create turtle object(joe)
joe = turtle.Turtle()

#change the drawing color
joe.color('red')

#change the drawing width of line
joe.pensize('3')

#draw a line from center of graphic window in right direction
joe.forward(150)

#line will turn left by 90 degree
joe.left(90)
joe.forward(150)
joe.left(90)
joe.forward(150)
joe.left(90)
joe.forward(150)
joe.left(90)


#draw line using for statement
joe.color('blue')
for i in [0,1,2,3]:
  joe.forward(150)
  joe.left(90)
  
wn.exitonclick()
